<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:queryHint="@string/add_song_activity_search_hint"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/frame_actions"
        android:layout_below="@+id/searchView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            style="@style/frame_button.leftAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_simple"
            android:text="@string/create_playlist_title_cancel"
            android:id="@+id/create_playlist_cancel" />
        <Button
            style="@style/frame_button.leftAction"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_simple"
            android:text="@string/create_playlist_title_save"
            android:id="@+id/create_playlist_save" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_result"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frame_actions"
        />




</RelativeLayout><!-- From: file:/C:/Workspace/android/ShakeTimer/PYL/app/src/main/res/layout/activity_add_song.xml -->