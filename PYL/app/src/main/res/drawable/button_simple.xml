<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/titles_background_stroke" />
                    <padding android:left="8dp" />
                    <corners android:radius="5dp"/>
                    <stroke android:width="1dp" android:color="@color/titles_background" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/titles_background" />
                    <padding android:left="8dp" />
                    <corners android:radius="5dp"/>
                    <stroke android:width="1dp" android:color="@color/titles_background_stroke" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>